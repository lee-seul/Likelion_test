<!DOCTYPE html>
<html>
    <head>
        <title>게시판</title>
        <meta charset="utf-8">
    </head>
    
    <body>
        <div class="container row" style="margin: 0 auto">
            <div class="container col-md-2">
            </div>

            <div class="container col-md-8" style="maring-top: 50px;">
                <h2>Study</h2>
                <hr>
                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading">
                        <form method="get" action="/home/write">
                            <button type="submit" class="btn btn-default">글 쓰기</button>
                        </form>
                    </div>
                    <!-- Table -->
                    <table class="table">
                        <% @posts.each do |p| %>
                            <tr>
                                <td><%= p.id %></td>
                                <td><%= p.title %></td>
                            </tr>
                        <% end %>
                    </table>
                </div>
            </div>
            
            <div class="container col-md-2">
            </div>
        </div>
    </body>
</html>
